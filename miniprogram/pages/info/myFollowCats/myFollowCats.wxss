/* pages/info/myFollowCats/myFollowCats.wxss */

.follow-count {
  width: 750rpx;
  text-align: center;
  color: var(--color-black-light);
  margin-top: 30rpx;
}

.card {
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--color-gray-light);
}


.avatar {
  width: 100rpx;
  height: 100rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.name {
  font-size: 30rpx;
  width: 300rpx;
  /* background-color: aqua; */
  padding: 0 30rpx;
}

.campus {
  font-size: 24rpx;
  color: var(--color-gray-dark);
}

button {
  font-size: 26rpx;
}