.pop {
    position: relative;
    width: 200px;
    height: 100px;
    background-color: white;
    border-radius: 5px;
    filter: drop-shadow(2px 2px 5px rgba(0, 0, 0, 0.5));
}

.pop::before {
    content: '';
    position: absolute;
    right: 50%;
    top: -20px;
    transform: translateY(-0%) rotate(270deg);
    width: 0;
    height: 0;
    border-top: 15px solid transparent;
    border-left: 15px solid #ddd;
    border-bottom: 15px solid transparent;
}

.pop::after {
    content: '';
    position: absolute;
    right: 50%;
    top: -20px;
    transform: translateY(-0%) rotate(270deg);
    width: 0;
    height: 0;
    border-top: 15px solid transparent;
    border-left: 15px solid white;
    border-bottom: 15px solid transparent;
}

.content {
    display: flex;
    flex-direction: column;
    transform-origin: left;
    height: 100vh;
    background-color: #fffbf0;
    background-clip: content-box;
    letter-spacing: 1rpx !important;
    width: auto !important;
    transform-style: preserve-3d;
    background-image:
        linear-gradient(#e7e7e7 1rpx, transparent 2rpx);
    background-size: 100rpx 50rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    margin: 10rpx;
    padding: 10rpx 10rpx;
    color: #333333;
    line-height: 50rpx !important;
    transition: box-shadow 0.3s ease;
}

.content:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

.icon-left {
    position: sticky;
    width: auto;
    text-align: justify;
    opacity: 0.3;
    height: 60rpx;
    line-height: 60rpx;
    aspect-ratio: 1 / 1;
    transition: 0.5s;
}

.icon-left:hover {
    opacity: 1;
}

.icon-right {
    position: sticky;
    width: auto;
    height: 60rpx;
    line-height: 60rpx;
    aspect-ratio: 1 / 1;
    opacity: 0.3;
    transition: 0.5s;
}

.icon-right:hover {
    opacity: 1;
}

.edit {
    width: 90rpx;
    height: 60rpx;
    line-height: 50rpx;
    padding-left: 2%;
    text-align: justify;
    position: sticky;
    z-index: 5;
    left: 100%;
    top: 70%;
    border: 3rpx outset #ccc;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    border-right: none;
    transition: 1s;
}

.edit-text {
    position: relative;
    width: 100vw;
    right: -28%;
    top: -90%;
    font-family: "黑体";
    font-size: medium;
    display: none;
}

.edit:hover {
    width: 100px;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
}

.edit:hover .edit-text {
    display: block;
}

.text {
    /*设置为弹性盒子*/
    display: -webkit-box;
    /* 表示几行后超出隐藏 */
    -webkit-line-clamp: 2;
    /* 超出隐藏 */
    overflow: hidden;
    /*超出显示为省略号*/
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    /*强制英文单词自动换行*/
    word-break: break-all;
}

@keyframes left {
    0% {
        transform: rotateY(-90deg);
        opacity: 0;
        transition: all .1s ease-in;
    }

    100% {
        opacity: 1;
        transform: rotateY(0deg);
    }
}

@keyframes right {
    0% {
        transform: rotateY(0deg);
        transform-style: preserve-3d;
        opacity: 1;
        transition: all .1s ease-in;
    }

    99% {
        transform: rotateY(-90deg);
        opacity: 0;
    }

    100% {
        opacity: 1;
        transform: rotateY(0deg);
    }
}

.flip-right {
    animation: right 1s 1;
}

.flip-left {
    animation: left 1s 1;
}

